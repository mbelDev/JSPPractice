	<script>
	//jQuery alias  $
        $(".confirm").on("click", function() {
            if ($("#userID").val() === "") {
				alert("아이디를 입력 해 주세요.");
                $('userID').focuse();
			return false;
			}
			if ($("#userPW").val() === "") {
				alert("비밀번호를 입력 해 주세요.");
                $('userPW').focuse();
			return false;
